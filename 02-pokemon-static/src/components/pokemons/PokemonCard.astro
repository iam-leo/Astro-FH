---
interface Props {
    name: string;
    url: string;
    isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;

const id = url.split('/').at(-2);

const imageUrl = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a
    href=`/pokemons/${ name }`
    class:list={[
        "block bg-slate-800 rounded p-3 text-center capitalize hover:bg-slate-700 hover:scale-105 hover:saturate-150 transition-all'",
        {
            'hover:bg-transparent': isBig,
        },
    ]}
>
    <img
        src={imageUrl}
        alt={name}
        class:list={[
            'mx-auto mb-2 saturate-100 size-24',
            {
                'size-72': isBig,
            },
        ]}
        alt=`Imagen de ${ name }`
    />
    <p class='text-lg font-semibold'>#{id} {name}</p>
</a>
